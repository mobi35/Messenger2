<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<!--Author      : -->
<div id="inventory-invoice">

    <div class="toolbar hidden-print">
        <div class="text-right">
            <button style="background-color:#5e72e4" id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Print</button>
      
        </div>
        <hr>
    </div>
    <div class="invoice overflow-auto">
        <div style="min-width: 600px">
            <header>
                <div class="row">
                    <div class="col">
                        <a target="_blank" href="#">
                          <img style="width:40%;" src="~/logo.png" />  
                        </a>
                    </div>
                    <div class="col company-details">
                        <h2 class="name">
                            <a style="color:#5e72e4;">
                               Mail Expert Messengerial & Gen. Services, Inc.
                            </a>
                        </h2>
                        <div>67-C Maysilo Circle, Barangay Plainview, Mandaluyong City</div>
                        <div>09952703294</div>
                        <div>info@messengerial.com</div>
                    </div>
                </div>
            </header>
            <main>
                <div class="row contacts">
                    <div class="col invoice-to">
                        <div class="text-gray-light">INVOICE TO:</div>
                        <h2 class="to">@Model.Users.FirstName @Model.Users.LastName</h2>
                        <div class="address">@Model.Users.Address</div>
                        <div class="email"><a href="mailto:test@example.com">@Model.Users.Email</a></div>
                    </div>
                    <div class="col invoice-details">
                        <h1 class="invoice-id">INVOICE @String.Format("{0:D5}", Model.Projects.ProjectID)  </h1>
                        <div class="date">Date of Invoice: @Model.Projects.InvoiceDate </div>
                        <div class="date">Due Date: @Model.Projects.InvoiceDate.AddDays(7) </div>
                    </div>
                </div>
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th>INVOICE NO.</th>
                            <th class="text-left">AREA COVERAGE</th>
                            <th>QUANTITY</th>
                            <th class="text-right">PRICE</th>
                            <th class="text-right">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="no">@String.Format("{0:D5}", Model.Projects.ProjectID)</td>
                            <td class="text-left"><h3> @Model.Projects.Area </h3></td>
                            <td class="text-left"><h3> @Model.Projects.Quantity </h3></td>
                            <td class="unit">P @Model.Projects.Price.ToString("N") </td>

                            <td class="total">P @Model.Projects.Price.ToString("N")</td>
                        </tr>


                    </tbody>
                    <tfoot>


                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">GRAND TOTAL</td>
                            <td>P @Model.Projects.Price.ToString("N")</td>
                        </tr>
                    </tfoot>
                </table>
                <br />
                <br />
                <div class="thanks">Thank you!</div>
                <div class="notices">
                    <div>NOTICE:</div>
                    <div class="notice">System Generated Invoice.</div>
                </div>
            </main>
            <footer>
                Invoice was generated on a computer and is valid without the signature and seal.
            </footer>
        </div>
        <div></div>
    </div>
</div>



<script>
     $('#printInvoice').click(function(){
            Popup($('.invoice')[0].outerHTML);
            function Popup(data) 
            {
                window.print();
                return true;
            }
        });
</script>