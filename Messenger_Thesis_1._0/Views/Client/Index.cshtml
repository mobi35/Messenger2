    document.getElementById('registration').onsubmit = function () {



        var formdata = new FormData();
        var fileInput = document.getElementById('fileInput');
        var email = $('#email').val();
        var companyName = $('#companyName').val();
        var password = $('#password').val();
        var cpassword = $('#cpassword').val();
        var firstName = $('#first-name').val();
        var lastName = $('#last-name').val();
        var birthDate = $('#birth-date').val();
        var address = $('#address').val();
        var phonenumber = $('#phonenumber').val();
        var role = $('#role').val();

        var gender = "";
        if ($('#customRadio1').is(':checked')) {
            gender = "male";
        } else {
            gender = "female";
        }


        for (i = 0; i < fileInput.files.length; i++) {
            formdata.append("Image", fileInput.files[i]);
        }

        formdata.append("Email", email);
        formdata.append("Password", password);
        formdata.append("FirstName", firstName);
        formdata.append("ConfirmPassword", cpassword);
        formdata.append("LastName", lastName);
        formdata.append("CompanyName", companyName);
        formdata.append("Gender", gender);
        formdata.append("BirthDate", birthDate);
        formdata.append("Role", role);
        formdata.append("Address", address);
        formdata.append("Phonenumber", phonenumber);
        $('#submit').disabled = true;
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/Client/SendRegisteredData');
        xhr.send(formdata);


        xhr.onreadystatechange = function () {


            if (xhr.readyState == 4 && xhr.status == 200) {


                if (xhr.responseText.split(',').includes("companyname_required")) {
                    $('#parentCompanyName').addClass('has-danger');
                    $('.companyNameValidation').html("Please write your Company Name");
                } else {
                    $('#parentCompanyName').removeClass("has-danger");
                    $('#parentCompanyName').addClass("has-success");
                    $('.companyNameValidation').html("");
                }



                if (xhr.responseText.split(',').includes("no_password")) {
                    $('#parentPassword').addClass('has-danger');
                    $('#parentCPassword').addClass('has-danger');
                    $('.passwordValidation').html("Please input your password");
                } else if (xhr.responseText.split(',').includes("password_not_match")) {
                    $('#parentPassword').addClass('has-danger');
                    $('#parentCPassword').addClass('has-danger');
                    $('.passwordValidation').html("Your password doesn't match.");
                } else {
                    $('#parentPassword').addClass("has-success");
                    $('#parentCPassword').addClass("has-success");
                    $('#parentPassword').removeClass("has-danger");
                    $('#parentCPassword').removeClass("has-danger");
                    $('.passwordValidation').html("");
                }

                if (xhr.responseText.split(',').includes("firstname_required")) {
                    $('#parentFirstName').addClass('has-danger');
                    $('.firstNameValidation').html("Please write your first name");
                } else if (xhr.responseText.split(',').includes("firstname_not_letter")) {
                    $('#parentFirstName').addClass('has-danger');
                    $('.firstNameValidation').html("Invalid character");
                } else if (xhr.responseText.split(',').includes("firstname_max_letter")) {
                    $('#parentFirstName').addClass('has-danger');
                    $('.firstNameValidation').html("Maximum of 50 characters only");
                } else {
                    $('#parentFirstName').removeClass("has-danger");
                    $('#parentFirstName').addClass("has-success");
                    $('.firstNameValidation').html("");
                }

                if (xhr.responseText.split(',').includes("lastname_required")) {
                    $('#parentLastName').addClass('has-danger');
                    $('.lastNameValidation').html("Please write your last name");
                } else if (xhr.responseText.split(',').includes("lastname_not_letter")) {
                    $('#parentLastName').addClass('has-danger');
                    $('.lastNameValidation').html("Invalid character");
                } else if (xhr.responseText.split(',').includes("lastname_max_letter")) {
                    $('#parentLastName').addClass('has-danger');
                    $('.lastNameValidation').html("Maximum of 50 characters only");
                } else {
                    $('#parentLastName').removeClass("has-danger");
                    $('#parentLastName').addClass("has-success");
                    $('.lastNameValidation').html("");
                }


                if (xhr.responseText.split(',').includes("no_birthdate")) {
                    $('#parentBirthdate').addClass('has-danger');
                    $('.birthdateValidation').html("Please choose your birthdate");
                } else if (xhr.responseText.split(',').includes("invalid_birthdate")) {
                    $('#parentBirthdate').addClass('has-danger');
                    $('.birthdateValidation').html("You should be 18 years old to register");
                } else {
                    $('#parentBirthdate').removeClass("has-danger");
                    $('#parentBirthdate').addClass("has-success");
                    $('.birthdateValidation').html("");
                }

                if (xhr.responseText.split(',').includes("no_picture")) {
                    $('#parentFileinput').addClass('has-danger');
                    $('.fileinputValidation').html("Please upload your picture");
                } else {
                    $('#parentFileinput').addClass("has-success");
                    $('#parentFileinput').removeClass('has-danger');
                    $('.fileinputValidation').html("");
                }

                if (xhr.responseText.split(',').includes("phone_required")) {
                    $('#parentPhonenumber').addClass('has-danger');
                    $('.phonenumberValidation').html("Please write your phone number");
                } else if (xhr.responseText.split(',').includes("number_only")) {
                    $('#parentPhonenumber').addClass('has-danger');
                    $('.phonenumberValidation').html("Letters are not allowed");
                } else {
                    $('#parentPhonenumber').addClass("has-success");
                    $('#parentPhonenumber').removeClass('has-danger');
                    $('.phonenumberValidation').html("");
                }

                if (xhr.responseText.split(',').includes("address_required")) {
                    $('#parentAddress').addClass('has-danger');
                    $('.addressValidation').html("Please write your address");
                } else {
                    $('#parentAddress').addClass("has-success");
                    $('#parentAddress').removeClass('has-danger');
                    $('.addressValidation').html("");
                }




                if (xhr.responseText.split(',').includes("no_email")) {
                    $('#parentEmail').addClass("has-danger");
                    $('.emailValidation').html("Email is required.");
                } else if (xhr.responseText.split(',').includes("invalid_email")) {
                    $('#parentEmail').addClass("has-danger");
                    $('.emailValidation').html("This is not a valid email.");
                }
                else if (xhr.responseText.split(',').includes("existing_email")) {
                    $('#parentEmail').addClass("has-danger");
                    $('.emailValidation').html("Email is already taken");
                } else {
                    $('#parentEmail').addClass("has-success");
                    $('#parentEmail').removeClass("has-danger");
                    $('.emailValidation').html("");
                }

                if (xhr.responseText == "") {
                    $('#RegistrationForm').hide();
                    Swal.fire(
                        'Good job!',
                        'You clicked the button!',
                        'success'
                    );
                    $('#submit').disabled = false;
                    GetAllUser();
                }

            }
        }

        return false;
    }

