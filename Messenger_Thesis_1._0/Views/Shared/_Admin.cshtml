                }else {
                    $('#update_parentLastName').removeClass("has-danger");
                    $('#update_parentLastName').addClass("has-success");
                    $('.update_lastNameValidation').html("");
                }

                if (xhr.responseText == "") {
                   $('#UpdateForm').hide();
                    $('#editUser').hide();
                    $('.modal-backdrop').hide()

                    Swal.fire(
                        'Edited!',
                        'You clicked the button!',
                        'success'
                    );
                }

            }

        }

        return false;

           });



